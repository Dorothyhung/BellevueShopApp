
@{
    ViewData["Title"] = "Add Products";
    Layout = "~/Views/Shared/_HungLayout.cshtml";
}
@model PROG123.Models.ProductModel


<h1>Add a Product</h1>
<form id="productform" asp-action="AddProductToDB" method="post">
    <div class="inputwrap">
        <label>Name:</label>
        <input asp-for="Name" required class="roundCorners"/>
    </div>
    <div class="inputwrap">
        <label>Description:</label>
        <input asp-for="Description" required class="roundCorners"/>
    </div>
    <div class="inputwrap">
        <label>Price:</label>
        <input asp-for="Price" required class="roundCorners"/>
    </div>
    <div class="inputwrap">
        <label>Inventory:</label>
        <input asp-for="InventoryAmount" required class="roundCorners"/>
    </div>
    <div class="inputwrap">
        <label><button type="submit">Submit</button></label>
    </div>
</form>

